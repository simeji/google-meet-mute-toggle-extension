{
  "manifest_version": 3,
  "name": "Google Meet Mute Toggle",
  "version": "1.0",
  "description": "Toggle mute in Google Meet with a global shortcut.",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://meet.google.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "toggle_mute": {
      "suggested_key": {
        "default": "Ctrl+Shift+2",
        "mac": "Command+Shift+2"
      },
      "description": "Toggle mute in Google Meet"
    }
  }
}